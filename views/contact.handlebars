 <!-- Navbar -->
    <nav>
        <div class="menu-icon">
            <i class="fa fa-bars fa-2x"></i>
        </div>
        <div class="menu">
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/signup" >Signup</a></li>
                <li><a href="/contact" class="active">Contact</a></li>
                <li><a href="/login" >Login</a></li>

            </ul>
        </div>
    </nav>


  <!-- Start Main container -->
  <div class="container text-center">
    <div id="contact-card" class="container bg-white rounded-lg shadow-lg overflow-hidden">
      <!-- pictures carousel -->
      <div class="w-full sm:w-1/2 md:w-1/3 flex flex-col p-3">
        <div class="flex-1 flex flex-col">
          <div class="carousel-inner">
            <div id="dogcarousel" class="bg-cover h-48 carousel slide" data-ride="carousel">

              <!-- Indicators -->
              <div class="carousel-item active">
                <img src="/pic/8bc3cede-f471-44c2-9fc7-46873bc95a59-(1).jpg" alt="Dogs" width="750" height="400">
                <div class="carousel-caption">
                  <h1 class="mb-4 text-2xl">Contact Us</h1>
                </div>
              </div>
              <div class="carousel-item">
                <img src="/pic/598cdf56-fe6d-41a9-bf5f-fa2fc80f02fb.jpg" alt="Dogs" width="750" height="400">
                <div class="carousel-caption">
                  <h1 class="mb-4 text-2xl">Contact Us</h1>
                </div>
              </div>
              <div class="carousel-item">
                <img src="/pic/d47c77ed-03f7-4886-8125-6cfe11dc6a2d-(1).jpg" alt="Dogs" width="750" height="400">
                <div class="carousel-caption">
                  <h1 class="mb-4 text-2xl">Contact Us</h1>
                </div>
              </div>
            </div>
            <!-- Left and right controls -->
            <a class="carousel-control-prev" href="#dogcarousel" data-slide="prev">
              <span class="carousel-control-prev-icon"></span>
            </a>
            <a class="carousel-control-next" href="#dogcarousel" data-slide="next">
              <span class="carousel-control-next-icon"></span>
            </a>
          </div>
        </div>
      </div>

      <div class="p-4 flex-1 flex flex-col">

        <!-- Login From -->

        <form class="signup text-left">
          <!-- Owner Information -->
          <div class="row">
            <div class="col">
              <h3 class="mb-4 text-2xl text-center">Talk to us</h3>
              <p>Please leave a message.</p>
            </div>
          </div>
          <!-- Email & Password -->
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="fname">Fist Name:</label>
              <input type="text" class="form-control" id="fname" placeholder="First Name">
            </div>
            <div class="form-group col-md-6">
              <label for="lname" class="">Last Name:</label>
              <input type="password" class="form-control" id="lname" placeholder="Last Name">
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label for="conemail">Email:</label>
              <input type="email" class="form-control" id="conemail" aria-describedby="emailHelp"
                placeholder="Enter email">
            </div>
          </div>
          <!-- Leave a text -->
          <div class="form-row">
            <div class="form-group col">
              <label for="contactComment">Comment:</label>
              <textarea class="form-control" id="contactComment" aria-label="With textarea"
                placeholder="Leave your message here"></textarea>
            </div>
          </div>
          <!-- Send Button -->
          <div class="row text-center">
            <div class="col">
              <button type="submit" class="btn btn-outline-secondary signin-btn">Send</button>
            </div>
        </form>

      </div>
    </div>
  </div>