<!--------------- Start Playdate ------------->
<div id="playdate-card-wrapper" class="js-playdate-card-wrapper" data-useremail='{{ user.email }}'>
  <span class="hide">Please wait while we contact the dog's owner</span>
  <span class="hide2">Your email has been sent</span>
  <div class="swipecard">
    <div id="playdate-card" class="container text-center p-4 flex-1 flex flex-col rounded-lg">
      <div class="mb-4 text-grey-darker text-sm flex-1">
        <div class="play-card">
          <!-- Picture of dog owner -->
          <div>
            <img class="img-avatar" src="/logo/dog_logo.svg" alt="Picture od Dog owner">
          </div>
          <!-- Picture of dog -->
          <div class="play-card-text">
            <img id="dogimage" draggable="false" class="img-dog" src="{{ dog.dogImage }}" alt="Picture of the dogs">
            <div class="title-total">
              <input type="hidden" id="dogId" name="dogId" value="{{ dog.id }}">
              <div class="title"> Owner: {{ dog.ownerFirst }} {{ dog.ownerLastname }} </div>
              <h2 id="dogname">Doggy to play with</h2>
              <div class="desc" id="dogName">Dog's name: {{dog.dogName}}</div>
              <div class="desc" id="breed">Breed: {{dog.breed}}</div>
              <div class="desc" id="age">Age: {{dog.age}}</div>

              <div class="desc" id="sex">Sex: {{#if dog.sex}} Female {{else}} Male {{/if}}</div>
              <div class="desc" id="desexed">Desexed: {{#if dog.desexed}} No {{else }} Yes {{/if}}</div>
              <div class="desc kursive"> Small discription: {{dog.userText}}</div>
            </div>
          </div>
        </div>
        <div class="container text-center">
          <div class="btn-group">
            <button class="btn btn-secondary">
              <a href="#">NO!</a>
            </button>
          </div>
          <div class="btn-group">
            <button class="btn btn-secondary">
              <a href="#">YES!</a>
            </button>
          </div>
        </div>
      </div>
      <div class="row container">
        <div class="col-4 btn-card-no disabled">
          <button class="btn btn-outline-secondary">
            <a href="#" class="disabled">NO!</a>
          </button>
        </div>
        <div class="col btn-card-yes disabled">
          <button class="btn btn-outline-secondary">
            <a href="#" class="disabled">YES!</a>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

